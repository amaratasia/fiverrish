<div class="hero" style='margin: -15px;'>
  <div class="container">
    <div class="row">
      <div class="hero-heading">
        What do you need done?<br/>
        Find it on Fiverrish.
        <p>Browse. Buy. Done</p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-offset-3 col-md-6">
        <form action="">
          <div class="input-group input-group-lg">
            <input type="text" class="form-control" placeholder="What are you looking for...">
            <span class="input-group-btn">
              <button class="btn btn-default" type="button">
                Find Services
              </button>
            </span>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<div class="container section">
  <h1>
    Newest Gigs
  </h1>
  <div class="row">
    <% @gigs.each do |gig| %>
      <div class="col-md-3">
        <div class="gig-card">
          <%= image_tag gig.image.url(:small), size: '225x150' %>
          <div class="gig-card-details">
            <h4>
              <%= link_to gig.title, service_path(gig)%>
            </h4>
          </div>
          <div>
          <h3>
            Rs. <%= gig.price %>
          </h3>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
